{% extends 'gerer.html.twig' %}

{% block entete %}
  {{ parent() }}
{% endblock %}

{% block corps %}
  {{ parent() }}
{% endblock %}

{% block laPage %}

<div class='container-fluid OurFont' style='padding-top : 1rem; font-size : 1.5rem;'>
  <div class='row'>
{% for evt in soirees %}
    <div class='col-12'>
        Soir√©e {{evt.id}}, en date du {{evt.dateDebut|date('d/m/Y')}} ({{evt.capacite}} joueurs max) :
    </div>
    {% for joueur in evt.inscrits %}
    <div class='col-2'></div>
    <div class='col-1'>{{ joueur.id }}</div>
    <div class='col-3'>{{ joueur.nom }} ({{joueur.nbJoueurs}})</div>
    <div class='col-6'>{{ joueur.email }}</div>
    {% endfor %}
    <br>
{% endfor %}
  </div>
</div>

{% endblock %}
