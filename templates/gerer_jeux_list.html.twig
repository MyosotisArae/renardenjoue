{% extends 'gerer.html.twig' %}

{% block entete %}
  {{ parent() }}

  <style>
    input { font-size : 1rem; }
    .input2
    {
      text-align : right;
      width : 1.2rem;
      border : 0;
    }
    .input4
    {
      text-align : left;
      min-width : 4rem;
      border : 0;
    }
    textarea
    {
      width : 100%;
      height : 6rem;
      font-size : 1rem;
    }
    button
    {
      text-align : right;
      font-size : 1rem;
    }
  </style>

{% endblock %}

{% block corps %}
  {{ parent() }}
{% endblock %}

{% block laPage %}

{% set isOdd = 1 %}
{% for jeu in jeux %}
<form action='ajout_jeu{{jeu.id}}' method='post'>
  {% set isOdd = 1-isOdd %}
  <div class='container-fluid styleLigne{{isOdd}}'>
    <div class='row'>
      <div class='col-1'>
        {{jeu.id}}
      </div>
      <div class='col-9'>
        {{jeu.nom}}
      </div>
      <div class='col-2'><button class='btn-primary btn float-right' type='submit'>Modifier</button>
      </div>
    </div>
  </div>
</form>
{% endfor %}

{% endblock %}