<div class="col-5 enBleu">
    {% if app.user %}
        <div class="checkbox mb-3">Heureux de vous voir, {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
    {% else %}

    <h1 class="h3 mb-3 font-weight-normal">Connectez-vous ici :</h1>
    {{ form(formulaire) }}

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

